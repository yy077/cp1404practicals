BoxLayout:
    orientation: 'horizontal'
    padding: 10
    spacing: 10
    
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        
        Label:
            text: "Sort by:"
            size_hint_y: 0.1
            
        Spinner:
            id: sort_spinner
            text: "Title"
            values: ["Title", "Year", "Category"]
            on_text: app.sort_movies(self.text.lower())
            size_hint_y: 0.1
            
        Label:
            text: "Add New Movie"
            size_hint_y: 0.1
            
        TextInput:
            id: title_input
            hint_text: "Title"
            size_hint_y: 0.1
            
        TextInput:
            id: year_input
            hint_text: "Year"
            size_hint_y: 0.1
            
        TextInput:
            id: category_input
            hint_text: "Category"
            size_hint_y: 0.1
            
        BoxLayout:
            size_hint_y: 0.1
            spacing: 5
            
            Button:
                text: "Add Movie"
                on_release: app.add_movie()
                
            Button:
                text: "Clear"
                on_release: app.clear_fields()
        
        Label:
            text: app.status_text
            size_hint_y: 0.1
            
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            id: status_label
            text: ""
            size_hint_y: 0.1
            
        ScrollView:
            BoxLayout:
                id: movies_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 5